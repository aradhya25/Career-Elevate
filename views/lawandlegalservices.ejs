  <style>
    /* Alternative modern color theme */
:root {
    --color-primary: #445E93; /* Royal Blue - professional but fresh */
    --color-primary-hover: #34487B; /* Darker Royal Blue */
    --color-secondary: #5C7AEA; /* Lighter accent blue */
    --color-bg-dark: #F5F7FA; /* Cool Light Gray */
    --color-bg-light: #FFFFFF; /* Pure White */
    --color-text: #2D3748; /* Dark Slate */
    --color-text-muted: #718096; /* Medium Slate */
    --color-accent: #D68C45; /* Terracotta/Orange - complementary to blue */
    --color-accent-light: #FEEBC8; /* Light Peach */
    --color-card-bg: #FFFFFF; /* White Card Background */
    --color-card-hover: #F9FAFC; /* Slight Off-White on Hover */
    --color-success: #5B9270; /* Forest Green */
    --color-alert: #E15A5A; /* Coral Red */
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
    line-height: 1.6;
    color: var(--color-text);
    background: var(--color-bg-light);
    min-height: 100vh;
}

.container {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 0.5rem;
}

/* Hero Section */
.hero {
    padding: 6rem 1rem;
    text-align: center;
    background: linear-gradient(120deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: white;
}

.hero-content {
    max-width: 768px;
    margin: 0 auto;
}

.hero h1 {
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    color: white;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
}

@media (min-width: 768px) {
    .hero h1 {
        font-size: 4rem;
    }
}

.hero p {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
}

/* Buttons */
.cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background-color: var(--color-accent);
    color: white;
    padding: 0.85rem 2.25rem;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(214, 140, 69, 0.3);
}

.cta-button:hover {
    background-color: #C07A35;
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(214, 140, 69, 0.4);
}

/* Career Paths Section */
.career-paths {
    padding: 5rem 1rem;
    background-color: var(--color-bg-light);
}

.career-paths h2,
.benefits h2,
.testimonials h2 {
    font-size: 2.25rem;
    text-align: center;
    margin-bottom: 1rem;
    color: var(--color-primary);
}

.section-subtitle {
    text-align: center;
    color: var(--color-text-muted);
    margin-bottom: 3rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.path-cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1024px;
    margin: 0 auto;
}

@media (min-width: 768px) {
    .path-cards {
        grid-template-columns: repeat(3, 1fr);
    }
}

.path-card {
    background-color: var(--color-card-bg);
    padding: 2rem;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    border-top: 4px solid var(--color-secondary);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.path-card:hover {
    background-color: var(--color-card-hover);
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
}

.path-card .icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border-radius: 12px;
    background: var(--color-accent-light);
    color: var(--color-accent);
    margin-bottom: 1.5rem;
}

.path-card h3 {
    font-size: 1.3rem;
    margin-bottom: 0.75rem;
    color: var(--color-primary);
}

.path-card p {
    color: var(--color-text-muted);
}

/* Benefits Section */
.benefits {
    padding: 5rem 1rem;
    background-color: var(--color-bg-dark);
}

.benefit-cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1024px;
    margin: 0 auto;
}

@media (min-width: 768px) {
    .benefit-cards {
        grid-template-columns: repeat(4, 1fr);
    }
}

.benefit-card {
    text-align: center;
    padding: 2rem 1.5rem;
    background-color: var(--color-bg-light);
    border-radius: 1rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
}

.benefit-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.benefit-card i {
    color: var(--color-accent);
    margin-bottom: 1.2rem;
    background: var(--color-accent-light);
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.2rem;
}

.benefit-card h3 {
    color: var(--color-primary);
    font-size: 1.2rem;
    margin-top: 0.5rem;
}

/* Testimonials Section */
.testimonials {
    padding: 5rem 1rem;
    background-color: var(--color-bg-light);
}

.testimonial-cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1024px;
    margin: 0 auto;
}

@media (min-width: 768px) {
    .testimonial-cards {
        grid-template-columns: repeat(3, 1fr);
    }
}

.testimonial-card {
    background-color: var(--color-bg-light);
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    position: relative;
    border-bottom: 3px solid var(--color-secondary);
}

.testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.testimonial-card:before {
    content: '"';
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 4rem;
    color: var(--color-accent-light);
    font-family: Georgia, serif;
    opacity: 0.5;
    line-height: 1;
}

.testimonial-header {
    display: flex;
    align-items: center;
    margin-bottom: 1.2rem;
}

.testimonial-header img {
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 0.75rem;
    margin-right: 1rem;
    object-fit: cover;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
}

.testimonial-header h3 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
    color: var(--color-primary);
}

.testimonial-header p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
}

.quote {
    color: var(--color-text);
    font-style: italic;
    position: relative;
    z-index: 1;
    line-height: 1.7;
}

/* CTA Section */
.cta {
    padding: 5rem 1rem;
    text-align: center;
    background: linear-gradient(120deg, var(--color-accent-light) 0%, #FFFFFF 100%);
}

.cta h2 {
    font-size: 2.25rem;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
}

.cta p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    max-width: 768px;
    margin-left: auto;
    margin-right: auto;
}

/* Footer */
footer {
    background-color: var(--color-primary);
    padding: 2rem 1rem;
    color: white;
}

.footer-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.footer-content span {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    letter-spacing: 0.5px;
}
  </style>
